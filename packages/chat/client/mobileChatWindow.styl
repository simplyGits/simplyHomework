headerHeight = 40px

footerHeight = 40px
sendButtonWidth = footerHeight + 5px

// Swagâ„¢ colors for activity of other person.
div.mobileChatWindow.online > .header
	background-color: #4CAF50
div.mobileChatWindow.inactive > .header
	background-color: #FF9800
div.mobileChatWindow.offline > .header
	background-color: #EF5350

div.mobileChatWindow
	absolute: top left right bottom

	div.header
		position: relative
		height: headerHeight
		padding: 3px
		font-size: 15px

		color: white

		img
			absolute: left top bottom
			height: headerHeight
			width: headerHeight

			pointer-events: all
			cursor: pointer

		div.name
			display: inline-block
			margin-left: 45px
			line-height: 2.3

			cursor: pointer

		i.fa
			absolute: right 10px top 8px
			cursor: pointer

			font-size: 20px
			text-align: center

	div#chatMessages
		absolute: top headerHeight bottom left right
		overflow: hidden
		overflow-y: scroll

		div.event
			color: gray
			text-align: center
			font-size: 90%

		div.message
			min-height: 30px
			margin-top: 3px
			font-size: 15px
			transition: .1s opacity ease-out

			aside
				display: inline

				img.senderImage
					pointer-events: all

			div.messageContent
				display: inline-block
				width: calc(100% - 40px)
				margin-left: 5px
				margin-right: 5px

				word-wrap: break-word

		div.message.own
			img.senderImage
				float: right

		div.message.pending
			opacity: .6

		div.loadMore
			text-align: center
			padding-bottom: 5px
			border-bottom: 1px lightgray solid
			margin-bottom: 10px

		div.padding
			width: 100%
			height: footerHeight

	div.footer
		absolute: left bottom right
		height: footerHeight
		background-color: rgba(255, 255, 255, .85)
		border-top: 1px lightgray solid

		input[type="text"]
			width: 'calc(100% - %s)' % sendButtonWidth
			height: 100%
			padding: 7px
			font-size: 17px

			border: none
			outline: none
			background-color: transparent

		button#sendButton
			absolute: top bottom right
			width: sendButtonWidth
			background-color: transparent
			border: none
			border-left: 1px lightgray solid
			outline: none

div.mobileChatWindow.noHeader
	div.header
		display: none

	div#chatMessages
		top: 0
