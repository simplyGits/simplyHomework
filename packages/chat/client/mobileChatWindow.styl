headerHeight = 40px

// Swagâ„¢ colors for activity of other person.
div.mobileChatWindow.online > .header
	background-color: #4CAF50
div.mobileChatWindow.inactive > .header
	background-color: #FF9800
div.mobileChatWindow.offline > .header
	background-color: #EF5350

div.mobileChatWindow
	absolute: top left right bottom

	div.header
		position: relative
		height: headerHeight
		padding: 3px
		font-size: 15px

		color: white

		img
			absolute: left top bottom
			height: headerHeight
			width: headerHeight

			pointer-events: all
			cursor: pointer

		div.name
			display: inline-block
			margin-left: 45px
			line-height: 2.3

			cursor: pointer

		i.fa
			absolute: right 10px top 8px
			cursor: pointer

			font-size: 20px
			text-align: center

	div#chatMessages
		absolute: top headerHeight bottom 30px left right
		overflow: hidden
		overflow-y: scroll

		div.message
			margin-top: 2px
			font-size: 15px
			transition: .1s opacity ease-out

			img.senderImage
				pointer-events: all

			div.messageContent
				display: inline-flex
				width: calc(100% - 40px)
				margin-left: 5px
				margin-right: 5px

				word-wrap: break-word

		div.message.own
			img.senderImage
				float: right

		div.message.pending
			opacity: .6

		div.loadMore
			text-align: center
			padding-bottom: 5px
			border-bottom: 1px lightgray solid
			margin-bottom: 10px

	div.footer
		absolute: left bottom right
		height: 30px

		input[type="text"]
			width: 100%
			height: 100%
			padding: 5px
			font-size: 17px

			border: none
			outline: none
			border-top: 1px lightgray solid
			background-color: transparent

		button#sendButton
			absolute: top bottom right
			width: 30px
			background-color: #fff
			border: 1px lightgray solid
			outline: none

div.mobileChatWindow.noHeader
	div.header
		display: none

	div#chatMessages
		top: 0
