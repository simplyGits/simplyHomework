div.chatWindow
	z-index: 9999

	width: 450px
	height: 300px
	margin-top: 15px

	position: relative

	background-color: white
	border: 1px lightgray solid
	border-radius: 5px
	overflow: hidden

div.mobileChatWindow
	absolute: top left right bottom

// Swagâ„¢ colors for activity of other person.
div.mobileChatWindow.online > .header
	background-color: #4CAF50
div.mobileChatWindow.inactive > .header
	background-color: #FF9800
div.mobileChatWindow.offline > .header
	background-color: #EF5350

div.mobileChatWindow
	div.header
		position: relative
		height: 40px
		padding: 3px
		font-size: 15px
		border-bottom: 1px lightgray solid

		color: white

		img
			absolute: left top bottom
			height: 39px
			width: 39px

			pointer-events: all
			cursor: pointer

		div.name
			display: inline-block
			margin-left: 45px
			line-height: 2.3

			cursor: pointer

		i.fa
			absolute: right 10px top 8px
			cursor: pointer

			font-size: 20px
			text-align: center

	div#chatMessages
		absolute: top 40px bottom 30px left right
		overflow: hidden
		overflow-y: scroll

		div.message
			margin-top: 2px
			font-size: 15px
			transition: .1s opacity ease-out

			aside
				display: none

			img.senderImage
				pointer-events: all

			div.messageContent
				display: inline-flex
				width: calc(100% - 40px)
				margin-left: 5px
				margin-right: 5px

				word-wrap: break-word

		div.message.own
			img.senderImage
				float: right

		div.message.pending
			opacity: .6

		div.loadMore
			text-align: center
			padding-bottom: 5px
			border-bottom: 1px lightgray solid
			margin-bottom: 10px

	div.footer
		absolute: left bottom right
		height: 30px

		input[type="text"]
			width: 100%
			height: 100%
			padding: 5px
			font-size: 17px

			border: none
			outline: none
			border-top: 1px lightgray solid
			background-color: transparent
