@require "/client/utils"
@require "jeet"
@require "./vars"

#overviewNotices
	margin-left: -25px
	margin-right: -25px
	padding: 15px

	-moz-column-gap: 10px
	-moz-column-count: 3
	-webkit-column-gap: 10px
	-webkit-column-count: 3
	+below(1000px)
		-webkit-column-count: 2
		-moz-column-count: 2
	+mobile()
		-webkit-column-count: 1
		-moz-column-count: 1

	div.notice
		-webkit-column-break-inside: avoid
		page-break-inside: avoid
		break-inside: avoid

		position: relative
		width: 100%
		height: 100%

		border: 1px lightgray solid
		padding: noticePadding
		margin-bottom: 10px

		.header
			roboto(500)
			font-size: 25px
			padding: noticePadding
			margin: -(noticePadding)
			margin-bottom: -5px

			.subheader
				font-size: 65%
				opacity: .7

	div.notice.clickable
		cursor: pointer

	div.notice.hover:hover,
	div.notice.clickable:hover
		border-color: black

	#nocardsnotice
		align()
		font-size: 20px
		color: gray
