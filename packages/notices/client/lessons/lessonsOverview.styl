noticePadding = 15px

.lessonsOverview
	.lessonGroup
		position: relative
		z-index: 0

		padding = 3px
		padding-top: padding
		padding-bottom: padding

		margin-left: -(noticePadding)
		margin-right: -(noticePadding)
