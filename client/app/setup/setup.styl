@require "../../utils"

#setupProgressBar
	fixed: top left
	height: 3px
	background-color: simplyBlue
	pointer-events: none

#setupProgressBar.full
	height: 100%
	opacity: .04

#setupProgressText
	fixed: top 10px right 15px
	opacity: .7
	letter-spacing: .1em

.fixedAppNameHeader
	fixed: top left 5px
	color: black !important
	font-size: 1.5em

	+mobile()
		position: relative

#extractInfo
	h2
		roboto(300)

	#courseInfoSelector
		height: 80px

#setup-wrapper
	absolute: top left right bottom
	overflow: hidden
	overflow-y: scroll

#setup
	max-width: 650px
	margin-left: auto
	margin-right: auto

	animation: 2s fadeIn ease-out-expo

	padTop = 15px
	padding-top: padTop
	padding-bottom: padTop

	padSide = 45px
	padding-left: padSide
	padding-right: padSide

	div.header
		width: 100%
		roboto(300)
		font-size: 35px
		margin-bottom: 15px
		border-bottom: 1px #DFDFDF solid

	div.content
		font-size: 15px

	div.footer
		text-align: right
		width: 100%
		border-top: 1px #DFDFDF solid
		margin-top: 25px
		padding-top: 10px
