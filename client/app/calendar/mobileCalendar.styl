@require "../../utils"
@require "jeet"

normalColor = #6AA4C1
scrappedColor = #9F9F9F
homeworkColor = #05cdf8
quizColor = #FF851B
testColor = #FF4136

#mobileCalendarItemDetails
	absolute: top left right bottom
	overflow-y: scroll
	background-color: white
	z-index: 10
	padding: 15px

	#header
		text-align: left
		font-size: 25px
		margin: -15px
		margin-bottom: 10px
		padding-left: 15px
		padding-right: 15px
		border-bottom: 1px lightgray solid
		height: 50px
		line-height: 50px

		#closeButton
			float: right
			margin-top: -3px
			font-size: 35px

	#scrapped
		margin-left: -15px
		margin-right: -15px
		padding-left: 15px
		padding-right: 15px

	#peopleCarousel
		margin-left: -15px
		margin-right: -15px
		padding-left: 15px
		padding-right: 15px

#datepickercontainer
	display: none
	fixed: top left right bottom
	z-index: 20

	#backdrop
		absolute: top left right bottom
		background-color: rgba(0, 0, 0, .7)

	#datepicker
		borderSize = 10px
		absolute: top 50% left 50%
		background-color: #fff
		width: 240px + borderSize
		transform: translate(-50%, -50%)
		border: borderSize #fff solid
#datepickercontainer.visible
	display: block

div.swipebar
	absolute: top left bottom
	width: 7%
	z-index: 8

body.snapjs-left div.swipebar,
body.snapjs-right div.swipebar {
	width: 100%
}

div.swipebar.right
	left: initial
	right: 0

div.mobileCalendarTopBar
	height = 50px
	height: height
	line-height: height

	margin: -10px
	padding = 5px
	padding-left: padding
	padding-right: padding

	font-size: 30px

	i#newAppointmentButton
		margin-right: 10px
		margin-top: 10px

	span.currentDate
		absolute: left 10px right 40px
		overflow: hidden

		roboto(300)
		white-space: nowrap
		text-overflow: ellipsis

		transition: .2s color linear
	span.currentDate.today
		color: darkred

	.fa-calendar
		absolute: top 10px right 10px
		z-index: 9

div.mobileCalendar
	absolute: left 0 right 0 bottom 0 top 50px
	position: absolute !important // Seperate just so that we can apply `!important` to it.
	overflow-x: hidden !important
	overflow-y: scroll !important

	.notice
		line-height: 45vh
		color: gray
		text-align: center
		font-size: 20px

	.hour
		position: relative
		width: 100%
		height: 50px
		margin-bottom: 5px
		transition: .2s color linear
		cursor: pointer

		.hourIndicator
			position: relative
			height: 50px
			width: 50px
			background-color: normalColor

			color: white
			font-size: 35px
			text-align: center
			display: inline-block

		.hourInfo
			absolute: top left 60px
			line-height: 1.2
			margin-top: 3px
			font-size: 20px
			white-space: nowrap

			.primary
				font-size: 100%

			.secondary
				font-size: 75%
				opacity: .5

	.hour.scrapped
		.hourIndicator
			background-color: scrappedColor
		.hourInfo
			text-decoration: line-through

	.hour.homework .hourIndicator
		background-color: homeworkColor

	.hour.quiz .hourIndicator
		background-color: quizColor

	.hour.test .hourIndicator
		background-color: testColor

	.hour.current
		color: darkred

	absentStyling(color)
		box-shadow: 0 0 0 3px color inset
		color: darken(color, 40%)

	.hour.absent .hourIndicator
		background-color: #fff
		color: black // #333
		absentStyling(normalColor)
	.hour.scrapped.absent .hourIndicator
		absentStyling(scrappedColor)
	.hour.homework.absent .hourIndicator
		absentStyling(homeworkColor)
	.hour.quiz.absent .hourIndicator
		absentStyling(quizColor)
	.hour.test.absent .hourIndicator
		absentStyling(testColor)

.mobileCalendar.comparing
	.hour
		opacity: 1 !important

	.hour .hourIndicator
		background-color: #009688 !important

	.hour.scrapped .hourIndicator
		background-color: #458A83 !important

#swipeview-slider span
	position: absolute
	top: 0
	left: 0
	width: 100%
	padding: 20px 0
	display: block
	font-size: 20px
	text-align: center
	text-shadow: 0 1px 0 #000

	transition: .5s opacity linear
	opacity: 0

#descholder
	position: absolute
	top: 0
	left: 0
	width: 100%
	text-align: center
	display: block

#swipeview-slider .swipeview-active span
	opacity: 1
	transition: .5s opacity linear
