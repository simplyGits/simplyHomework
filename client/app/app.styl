@require "jeet"
@require "rupture"
@require "../utils"

noticeHeight = 50px

#app
	absolute: top left right bottom

body.bigNoticeOpen #app
	top: noticeHeight

#bigNotice
	absolute: left top right
	height: noticeHeight
	z-index: 300

	text-align: center
	+mobile()
		text-align: left

	#content
		align(vertical)

		max-height: 100%
		width: calc(100% - 45px)
		padding-left: 10px

		overflow: hidden
		font-size: 1.4em
		white-space: nowrap
		text-overflow: ellipsis
		cursor: pointer

		+mobile()
			font-size: 1.2em
			white-space: initial

	#content:hover
		text-decoration: underline

	#dismissButton
		float: right
		padding-right: 15px

		cursor: pointer
		font-weight: 300
		font-size: 40px
		line-height: 40px

#bigNotice.noclick
	#content
		cursor: default

	#content:hover
		text-decoration: initial

#bigNotice.default
	background-color: #2ECC40
	color: white

#bigNotice.error
	background-color: #EA4444
	color: white

#wrapper
	absolute: top left 200px right 50px bottom
	z-index: 100

	+mobile()
		left: 0
		right: 0

#mobileHeader
	height = 50px
	position: relative
	height: height
	font-size: 17px

	border-bottom: 1px lightgray solid
	background-color: white

	i
		absolute: top bottom
		cursor: pointer
		font-size: 20px
		line-height: height

	i:first-child
		left: 10px

	i:last-child
		right: 10px

	#title
		center(80%)
		text-align: center
		line-height: height

		white-space: nowrap
		overflow: hidden

+mobile()
	.content
		top: 50px

div.notification
	z-index: 98765
	fixed: top 15px right 60px
	position: fixed !important
	font-weight: normal !important
	max-width: 300px

	transform: translateY(-300px)
	opacity: 0

	-webkit-touch-callout: none
	-webkit-user-select: none
	-khtml-user-select: none
	-moz-user-select: none
	-ms-user-select: none
	user-select: none
	cursor: default

	border-radius: 0 !important

	button
		margin: 3px

	div
		margin-bottom: -15px

	+mobile()
		right: 10px !important

body.chatSidebarOpen > div.notification
	right: 210px

div.notification:not(.ui-draggable-dragging)
	transition: all 1.5s ease-out-expo

div.notification.warning
	flash("warning")

div.notification.error
	flash("error")

div.notification.notice
	flash("notice")

div.notification.success
	flash("success")

div.notification.default
	notice(width = false, color = #f5f5f5)

div.notification.transformIn
	opacity: 1
	transform: translateY(0px)

+mobile()
	.chatSidebar, .sidebar
		visibility: hidden

	.snapjs-left .sidebar,
	.snapjs-right .chatSidebar {
		visibility: visible
	}

div.classRemoveRow
	font-size: 15px

span#checkboxLabel
	font-weight: initial

.modal#settingsModal > .modal-dialog
	center(300px)

	.modal-title
		text-align: center

	button
		width: 100%

	button:not(:last-child)
		margin-bottom: 5px

#addClassModal .classRow
	height: 40px
	line-height: 2
	overflow: hidden

	.classname
		col(1/3)
		white-space: nowrap
		text-overflow: ellipsis
		overflow: hidden

	.methodInput
		col(1/2.4)

	button
		text-align: center !important
		col(1/4)

#addProjectModal .modal-body
	h3:first-child
		margin-top: 0

	h3
		text-align: center
		text-rendering: optimizeLegibility

	.assignmentRow
		height: 40px
		line-height: 2

		.className
			col(1/8)

		.assignmentName
			col(1/1.6)

		button
			text-align: center !important
			col(1/4)

div.backdrop
	fixed: top bottom left right
	opacity: 0
	z-index: 998
	pointer-events: none

	background-color: #000

	transition: .5s opacity linear

div.backdrop.dimmed
	opacity: .6
	pointer-events: initial

.tour-current-active
	z-index: 9999
	position: relative
