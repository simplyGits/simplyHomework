@import "../main"
@import "rupture"

div.pressHeader
	content: "simply"
	color: white
	roboto(100)

	font-size: 200%
	fixed: top

	span
		opacity: .6
		margin-left: 15px

div.pressHeader:after
	content: "Press"
	color: white
	font-family: Arial, "Helvetica Neue", Helvetica, 'Roboto', sans-serif
	opacity: .5
	margin-left: 3px

.simplyPress
	roboto(400)
	background-color: #32a8ce

	fixed: top bottom left right

	overflow-y: auto

	.contentContainer
		background-color: rgba(255, 255, 255, 0.6)
		width: 50%
		min-height: 100px
		margin-left: 25%
		border-radius: 10px 10px 10px 10px
		padding: 10px
		margin-top: 2em

		h1
			margin-top: 0px

		img
			pointer-events: initial

+mobile()
	.simplyPress
		.contentContainer
			width: 100%
			margin-left: 0%
			margin-top: 0px

			padding-left: 10px
			padding-right: 10px

			border-radius: 0

	div.pressHeader
		position: relative
		width: 100%
		text-align: center